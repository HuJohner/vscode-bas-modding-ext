{
  "name": "bas-modding",
  "displayName": "BaS Modding",
  "description": "Makes the creation of Blade & Sorcery Mods easier.",
	"icon": "images/icon.png",
  "version": "0.0.1",
	"author": "HuJohner",
	"publisher": "HuJohner",
	"homepage": "https://www.youtube.com/c/HuJohner",
  "engines": {
    "vscode": "^1.81.0"
  },
	"license": "MIT",
  "categories": [
    "Other"
  ],
	"repository": {
		"type": "git",
		"url": "https://github.com/HuJohner/vscode-bas-modding-ext.git"
	},
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
			"type": "object",
			"title": "BaS Modding",
			"properties": {
				"bas-modding.username": {
					"type": "string",
					"scope": "resource",
					"default": "",
					"description": "Value to use to replace <author> variable."
				}
			}
		},
    "commands": [
			{
				"command": "bas-modding.newMod",
				"title": "New BaS Mod",
				"category": "BaS Mod"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "bas-modding.newMod",
					"group": "bas-modding"
				}
			]
		},
    "snippets": [
      {
        "language": "json",
        "path": "./snippets/quest.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
