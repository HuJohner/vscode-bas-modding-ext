{
  "name": "bas-modding",
  "displayName": "BaS Modding",
  "description": "Makes the creation of Blade & Sorcery Mods easier.",
  "icon": "images/icon.png",
  "version": "0.3.0",
  "author": "HuJohner",
  "publisher": "HuJohner",
  "homepage": "https://www.youtube.com/c/HuJohner",
  "engines": {
    "vscode": "^1.81.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HuJohner/vscode-bas-modding-ext.git"
  },
  "activationEvents": [
    "workspaceContains:**/manifest.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "BaS Modding",
      "properties": {
        "bas-modding.username": {
          "type": "string",
          "scope": "resource",
          "default": "",
          "description": "Value to use to replace <author> variable."
        },
        "bas-modding.sdkPath": {
          "type": "string",
          "scope": "resource",
          "default": "",
          "description": "Path to your local SDK."
        }
      }
    },
    "commands": [
      {
        "command": "bas-modding.newMod",
        "title": "New BaS Mod",
        "category": "BaS Mod"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "bas-modding.newMod",
          "group": "bas-modding"
        }
      ]
    },
    "snippets": [
      {
        "language": "json",
        "path": "./snippets/CatalogData.json"
      },
      {
        "language": "json",
        "path": "./snippets/QuestData.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "Quest_*.json",
        "url": "./schemas/catalogdata/QuestData.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.19",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^8.57.1",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
