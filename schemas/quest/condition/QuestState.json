{
    "id": "./schemas/quest/condition/QuestState.json",
    "title": "QuestState condition",
    "description": "A QuestState condition to validate if a quest is a certain state",
    "type": "object",
    "properties": {
        "$type": {
            "type": "string",
            "const": "QuestFramework.Conditions.QuestState, QuestFramework"
        },
        "questId": {
            "type": "string"
        },
        "state": {
            "type": "string",
            "enum": [
                "None",
                "InProgress",
                "Completed",
                "Failed"
            ]
        }
    }
}